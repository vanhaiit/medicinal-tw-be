{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@common/*": ["common/*"],
            "@configs/*": ["configs/*"],
            "@constants/*": ["constants/*"],
            "@entities/*": ["entities/*"],
            "@guards/*": ["guards/*"],
            "@models/*": ["models/*"],
            "@modules/*": ["modules/*"],
            "@repositories/*": ["repositories/*"],
            "@shared/*": ["shared/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
